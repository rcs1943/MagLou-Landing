---
interface Props {
    subcategory: string;
}

const { subcategory } = Astro.props as Props;
---

<div class="flex flex-col items-center">
    <h2 class="text-5xl font-semibold text-center text-black-3 xsm:text-[40px]">
        {subcategory}
    </h2>
    <div class="rhombus w-[60px] h-[60px] bg-black-3"></div>
</div>
