---
export interface ComboProps {
    comboTitle: string;
    comboDescription: string;
    comboImg: string;
    comboPrice?: number;
}

const { comboTitle, comboDescription, comboImg, comboPrice } = Astro.props as ComboProps;
---

<div class="flex flex-col max-w-[505px] justify-self-center w-full">
    <picture class="w-full rounded-t-xl overflow-hidden">
        <img src={comboImg} alt="Imagen del Combo" class="w-full h-[250px] object-cover" />
    </picture>
    <div class="flex flex-col p-5 gap-4 bg-black-3 text-secondary rounded-b-lg">
        <div class="flex w-full justify-between xsm:gap-4">
            <h3 class="text-2xl font-semibold xsm:text-xl">{comboTitle}</h3>
            {comboPrice && <span class="text-xl xsm:text-lg text-nowrap">{comboPrice.toFixed(2)}</span>}
        </div>
        <p class="text-xl">{comboDescription}</p>
    </div>
</div>
