---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/shared/Footer/Footer.astro';
import Header from '../components/shared/Header/Header.astro';
interface Props {
	title?: string;
	footerWithMap?: boolean;
	mainBgColor?: string;
}

const { title = "MagLou", footerWithMap, mainBgColor } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="/styles/customize.css" />
        <link rel="stylesheet" href="/src/styles.css" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header/>
		<main class=`${mainBgColor}`>
			<slot />
		</main>
		<Footer withMap={footerWithMap} />
		<script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
	</body>
</html>
